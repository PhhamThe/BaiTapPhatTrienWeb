@model IEnumerable<Harmic.Models.TbProduct>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Simple Tables</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Simple Tables</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title"><a asp-action="Create">Thêm mới</a></h3>

                            <div class="card-tools">
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-default">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Tiêu đề</th>
                                        <th>Loại</th>
                                        <th>Ảnh</th>
                                        <th>Giá</th>
                                        <th>Giá giảm </th>
                                        <th>Chất lượng</th>
                                        <th>Mới</th>
                                        <th>Mua nhiều</th>
                                        <th>Đánh giá</th>
                                        <th>Hoạt động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 0;
                                    }
                                    @foreach (var items in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@Html.DisplayFor(m => items.Title)</td>
                                            <td>@Html.DisplayFor(m => items.CategoryProduct.Title)</td>
                                            <td><img src="@Html.DisplayFor(m=> items.Image)" width="50" height="50" /></td>
                                            <td>@Html.DisplayFor(m => items.Price)</td>
                                            <td>@Html.DisplayFor(m => items.PriceSale)</td>
                                            <td>@Html.DisplayFor(m => items.Quantity)</td>
                                            <td>@Html.DisplayFor(m => items.IsNew)</td>
                                            <td>@Html.DisplayFor(m => items.IsBestSeller)</td>
                                            <td>@Html.DisplayFor(m => items.Star)</td>
                                            <td>@Html.DisplayFor(m => items.IsActive)</td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@items.ProductId" class="btn btn-primary">Sửa</a>|
                                                <a asp-action="Detail" asp-route-id="@items.ProductId" class="btn btn-info">Chi tiết</a>|
                                                <a asp-action="Delete" asp-route-id="@items.ProductId" class="btn btn-danger">Xóa</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- /.row -->
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
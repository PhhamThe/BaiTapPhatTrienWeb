@model  Harmic.Models.TbProduct
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thêm Menu</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Xóa sản phẩm</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Create" method="post">
                            <div class="card-body">
                                <label for="exampleInputEmail1">Tiêu đề</label>
                                @Html.DisplayFor(m => m.Title)
                            </div>
                            <div class="card-body">
                                <label for="exampleInputEmail1">Alias</label>
                                @Html.DisplayFor(m => m.Alias)
                            </div>
                            <div class="card-body">
                                <label for="exampleInputEmail1">Chi tiết</label>
                                @Html.DisplayFor(m => m.Detail)
                            </div>
                            <div class="card-body">
                                <img src="@Html.DisplayFor(m => m.Image)" alt="Alternate Text" />
                            </div>
                            <form action="Delete">
                                <input type="hidden" asp-for="ProductId"/>
                                <input type="submit" class="btn btn-danger" value="Xóa" />
                                <a asp-action="Index" class="btn btn-primary">Quay lại</a>
                                </form>
                        </form>

                    </div>


                </div>
                <!--/.col (left) -->
                <!-- right column -->
                <!--/.col (right) -->
            
    </section>
    <!-- /.content -->
</div>